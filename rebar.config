{erl_opts, [debug_info, {src_dirs, ["src"]}]}.

{port_env, [{"CFLAGS", "$CFLAGS"},
	    {"ERL_LDFLAGS", " -L$ERL_EI_LIBDIR -lei"},
	    {"LDFLAGS", "$LDFLAGS $ERL_LDFLAGS "}]}.

{port_specs, [{"priv/lib/iconv.so", ["c_src/iconv.c"]}]}.

{clean_files, ["c_src/iconv.gcda", "c_src/iconv.gcno"]}.

{cover_enabled, true}.
{cover_export_enabled, true}.
{coveralls_coverdata    , "_build/test/cover/eunit.coverdata"}.
{coveralls_service_name , "github"}.

{xref_checks, [undefined_function_calls, undefined_functions, deprecated_function_calls, deprecated_functions]}.

