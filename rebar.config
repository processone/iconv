{pre_hooks,
   [{"(linux|darwin|solaris)", compile, "mkdir -p priv/lib;make -C c_src"},
       {"(freebsd)", compile, "mkdir -p priv/lib;gmake -C c_src"}]}.
{post_hooks,
   [{"(linux|darwin|solaris)", clean, "mkdir -p priv/lib;make -C c_src clean"},
       {"(freebsd)", clean, "mkdir -p priv/lib;gmake -C c_src clean"}]}.


{erl_opts, [debug_info, {src_dirs, ["src"]}]}.

{port_env, [{"CFLAGS", "$CFLAGS"},
	    {"LDFLAGS", "$LDFLAGS $ERL_LDFLAGS "}]}.

{port_specs, [{"priv/lib/iconv.so", ["c_src/iconv.c"]}]}.

{clean_files, ["c_src/iconv.gcda", "c_src/iconv.gcno"]}.

{cover_enabled, true}.
{cover_export_enabled, true}.

{xref_checks, [undefined_function_calls, undefined_functions, deprecated_function_calls, deprecated_functions]}.

{profiles, [{test, [{erl_opts, [{src_dirs, ["src", "test"]}]}]}]}.
{plugins, []}.

